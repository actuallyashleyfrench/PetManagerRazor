@page
@model PetManagerRazor.Pages.Owners.IndexModel
@{
    // Page for displaying all Owners
    ViewData["Title"] = "Owners";
}

<h2>Owners</h2>

<!-- Search bar to filter Owners by name -->
<form method="get" class="mb-4 mt-3">
    <div class="input-group w-50">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search owner name..." />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

@if (Model.Owners.Count == 0)
{
    <p>No owners found.</p>
}
else
{
    <!-- Table displaying all Owners -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Number of Pets</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var owner in Model.Owners)
            {
                <tr onclick="location.href='@Url.Page("/Owners/Details", new { id = owner.Id })'" style="cursor: pointer;">
                    <td>@owner.Name</td>
                    <td>@owner.PhoneNumber</td>
                    <td>@owner.Email</td>
                    <td>@(owner.Pets?.Count ?? 0)</td>
                </tr>
            }
        </tbody>
    </table>
}