@page
@model PetManagerRazor.Pages.Owners.CreateModel
@{
    // Page to create new pet owner
    ViewData["Title"] = "Add Owner";
}

<h2>Add Owner</h2>

<form method="post">

    <!-- Owner name -->
    <div class="mb-3">
        <label asp-for="NewOwner.Name" class="form-label"></label>
        <input asp-for="NewOwner.Name" class="form-control w-50" />
        <span asp-validation-for="NewOwner.Name" class="text-danger"></span>
    </div>

    <!-- Owner email -->
    <div class="mb-3">
        <label asp-for="NewOwner.Email" class="form-label"></label>
        <input asp-for="NewOwner.Email" class="form-control w-50" />
        <span asp-validation-for="NewOwner.Email" class="text-danger"></span>
    </div>

    <!-- Phone number -->
    <div class="mb-3">
        <label asp-for="NewOwner.PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="NewOwner.PhoneNumber" class="form-control w-25" />
        <span asp-validation-for="NewOwner.PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Owner</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
