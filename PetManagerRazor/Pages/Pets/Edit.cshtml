@page "{id:int}"
@model PetManagerRazor.Pages.Pets.EditModel
@{
    // Page for editing Pet data.
    ViewData["Title"] = "Edit Pet";
}

<h2>Edit Pet</h2>

<!-- Edit Pet form -->
<form method="post">
    <!-- Hiddent Pet Id -->
    <input type="hidden" asp-for="Pet.Id" />

    <!-- Pet Name -->
    <div class="mb-3">
        <label asp-for="Pet.Name" class="form-label"></label>
        <input asp-for="Pet.Name" class="form-control w-50" />
        <span asp-validation-for="Pet.Name" class="text-danger"></span>

    </div>

    <!-- Pet Species select -->
    <div class="mb-3">
        <label asp-for="Pet.Species" class="form-label"></label>
        <select asp-for="Pet.Species" class="form-select w-50" asp-items="Model.SpeciesList">
            <option value="">-- Select Species --</option>
        </select>
        <span asp-validation-for="Pet.Species" class="text-danger"></span>
    </div>

    <!-- Breed input (optional) -->
    <div class="mb-3">
        <label asp-for="Pet.Breed" class="form-label"></label>
        <input asp-for="Pet.Breed" class="form-control w-50" />
    </div>

    <!-- Age input and Age Unit select-->
    <div class="form-group">
        <label>Age</label>
        <div class="d-flex gap-2">
            <input asp-for="Pet.Age" class="form-control" style="max-width: 100px;" />
            <select asp-for="Pet.AgeUnit" class="form-select" style="max-width: 120px;">
                <option value="Weeks">Weeks</option>
                <option value="Months">Months</option>
                <option value="Years">Years</option>
            </select>
        </div>
        <span asp-validation-for="Pet.Age" class="text-danger"></span>
        <span asp-validation-for="Pet.AgeUnit" class="text-danger"></span>
    </div>

    <!-- Owner select -->
    <div class="mb-3">
        <label asp-for="Pet.OwnerId" class="form-label">Owner</label>
        <select asp-for="Pet.OwnerId" class="form-select w-50" asp-items="@(new SelectList(Model.Owners, "Id", "Name"))" >
            <option value="">-- Select Owner --</option>
        </select>
        <span asp-validation-for="Pet.OwnerId" class="text-danger"></span>
    </div>
        
    <!-- Save and Cancel buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Pets/Details" asp-route-id="@Model.Pet.Id" class="btn btn-secondary">Cancel</a>
</form>

<!-- Delete Pet button ( with confirmation )-->
<form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this pet?');" class="mt-4">
        <input type="hidden" asp-for="Pet.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
